#!/bin/sh
NAME=libogg
VERSION=1.3.2
EXTENSION=tar.xz
SHA256=3f687ccdd5ac8b52d76328fbbfebc70c459a40ea891dbf3dccb74a210826e79b
FILENAME=$NAME-$VERSION.$EXTENSION

pkg-download $FILENAME $SHA256 http://downloads.xiph.org/releases/ogg/$FILENAME
cd $NAME-$VERSION
./configure --prefix="$PREFIX" --host=arm-none-eabi --disable-shared --enable-static
make
make -j1 install
